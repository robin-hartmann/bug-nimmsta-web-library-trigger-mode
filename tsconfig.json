{
  "include": ["**/*", "**/.*"],
  "exclude": ["www"],
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2015",
    "module": "ES2015",
    "lib": ["DOM", "ES2017"],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "www/",
    "removeComments": true,
    "noEmitOnError": true,
    "downlevelIteration": true,
    "newLine": "lf",
    /* Strict Type-Checking Options */
    "strict": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    /* Experimental Options */
    "experimentalDecorators": true,
    /* Advanced Options */
    "forceConsistentCasingInFileNames": true
  }
}
